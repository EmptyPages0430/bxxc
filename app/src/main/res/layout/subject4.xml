<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/lightwhite"
              android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="55dp"
                  android:background="#ffffff"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/boom"/>
        <com.jgkj.bxxc.tools.AutoTextView
            android:id="@+id/showNum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:padding="10dp"
            android:text="恭喜 188****6615 学员 顺利拿证!"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/background"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/orderTest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/license_text1"
            android:padding="15dp"
            android:text="顺序练题"/>

        <Button
            android:id="@+id/randomTest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/license_text4"
            android:padding="15dp"
            android:text="随机练题"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/examTest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/license_text3"
            android:padding="15dp"
            android:text="模拟考试"/>

        <Button
            android:id="@+id/error_Sub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/license_text2"
            android:padding="15dp"
            android:text="我的题库"/>
    </LinearLayout>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/lightwhite"
              android:hint="专项知识"
              android:padding="10dp"/>
    <LinearLayout android:id="@+id/inner_function"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#FFFFFF"
                  android:orientation="horizontal">
        <TextView
            android:id="@+id/inner_function1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:text="车内功能键"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:hint="爱车，从了解他开始"
            android:drawableRight="@drawable/right_arrow"
            android:gravity="right"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="0.1dp"
          android:layout_marginLeft="50dp"
          android:background="@color/lightgray"/>
    <LinearLayout android:id="@+id/dashboard"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#FFFFFF"
                  android:orientation="horizontal">
        <TextView
            android:id="@+id/dashboard1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:text="汽车仪表盘"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/right_arrow"
            android:gravity="right"
            android:hint="行车状态不容忽视"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="0.1dp"
          android:background="@color/lightgray"/>
</LinearLayout>