<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F9F9F9">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:background="#F9F9F9">
        <LinearLayout android:id="@+id/test"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="10dp"
                              android:orientation="horizontal"
                              android:paddingTop="20dp">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="问题："
                              android:textSize="20sp"/>
                    <TextView android:id="@+id/order_quester"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textSize="20sp"/>
                </LinearLayout>
                <ImageView android:id="@+id/test_imageView"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:layout_marginBottom="20dp"
                           android:layout_marginTop="20dp"
                           android:layout_weight="1"
                           android:scaleType="center"/>
            </LinearLayout>
            <TextView android:id="@+id/answer_item1"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:drawableRight="@drawable/check_background"
                      android:onClick="userClick"
                      android:paddingLeft="12dp"
                      android:paddingRight="14dp"
                      android:paddingTop="20dp"
                      android:text="item1"
                      android:textSize="15sp"/>
            <TextView android:id="@+id/answer_item2"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:drawableRight="@drawable/check_background"
                      android:onClick="userClick"
                      android:paddingLeft="12dp"
                      android:paddingRight="14dp"
                      android:paddingTop="10dp"
                      android:text="item2"
                      android:textSize="15sp"/>
            <TextView android:id="@+id/answer_item3"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:drawableRight="@drawable/check_background"
                      android:onClick="userClick"
                      android:paddingLeft="12dp"
                      android:paddingRight="14dp"
                      android:paddingTop="10dp"
                      android:text="item3"
                      android:textSize="15sp"/>
            <TextView android:id="@+id/answer_item4"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:drawableRight="@drawable/check_background"
                      android:onClick="userClick"
                      android:paddingLeft="12dp"
                      android:paddingRight="14dp"
                      android:paddingTop="10dp"
                      android:text="item4"
                      android:textSize="15sp"/>
            <Button android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:id="@+id/sureAnswer"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/redTheme"
                    android:text="确定选择"
                    android:layout_gravity="right"
                    android:textColor="@color/white"/>
            <LinearLayout android:id="@+id/detail"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="20dp"
                          android:gravity="center_vertical"
                          android:orientation="horizontal"
                          android:visibility="invisible">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/right_bg"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="答题详解"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/right_bg"/>
            </LinearLayout>
            <TextView android:id="@+id/explain"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:paddingLeft="20dp"
                      android:visibility="invisible"/>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>