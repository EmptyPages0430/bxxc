<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!-- 教练信息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/coach_head"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/head"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/coach_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="教练员：洪复生"
                android:textSize="25sp"/>
            <View android:layout_width="1dp"
                  android:layout_height="match_parent"
                  android:layout_margin="5dp"
                  android:background="@color/loginbackground"/>
            <ImageView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="14dp"
                android:src="@drawable/share_btn"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="10dp"
                  android:orientation="horizontal">
        <TextView android:id="@+id/place"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:hint="经开区-中心校区"/>
        <TextView android:id="@+id/chexing"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:hint="车型：C1"/>
        <TextView android:id="@+id/myclass"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:hint="班级：Vip班"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="百信价："/>
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥2999元"
                android:textColor="@color/orange"
                android:textSize="20sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/costsThat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:hint="费用说明 >"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="市场价："/>
        <TextView
            android:id="@+id/marketPrise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="4999"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/currentStu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:hint="当前学员数12人"/>
        <TextView
            android:id="@+id/totalStu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="累计学员数12239人"/>
        <TextView
            android:id="@+id/tongguo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:hint="通过率：90%"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/fourPromiselinearLayout"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="40dp"
                  android:layout_weight="1"
                  android:drawableLeft="@drawable/rightbtn"
                  android:drawablePadding="3dp"
                  android:gravity="center_vertical"
                  android:padding="5dp"
                  android:text="75天拿证"
                  android:textSize="12sp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="40dp"
                  android:layout_weight="1"
                  android:drawableLeft="@drawable/rightbtn"
                  android:drawablePadding="3dp"
                  android:gravity="center_vertical"
                  android:padding="5dp"
                  android:text="车接车送"
                  android:textSize="12sp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="40dp"
                  android:layout_weight="1"
                  android:drawableLeft="@drawable/rightbtn"
                  android:drawablePadding="3dp"
                  android:gravity="center_vertical"
                  android:padding="5dp"
                  android:text="预约学车"
                  android:textSize="12sp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="40dp"
                  android:layout_weight="1"
                  android:drawableLeft="@drawable/rightbtn"
                  android:gravity="center_vertical"
                  android:padding="5dp"
                  android:text="预约考试"
                  android:textSize="12sp"/>
        <ImageView android:layout_width="20dp"
                   android:layout_height="40dp"
                   android:gravity="center"
                   android:padding="5dp"
                   android:src="@drawable/right_arrow"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="10dp"
          android:background="@color/lightgray"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="10dp"
                  android:text="信用："/>
        <LinearLayout android:id="@+id/xinyong"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical"
                      android:orientation="horizontal"
                      android:padding="10dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="20dp"
                  android:padding="10dp"
                  android:id="@+id/haopinglv"
                  android:text="好评率："/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="10dp"
                  android:text="教学质量："/>
        <LinearLayout android:id="@+id/zhiliang"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical"
                      android:orientation="horizontal"
                      android:padding="10dp"/>
        <TextView android:id="@+id/zhiliangfen"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="10dp"
                  android:text="5.0分"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="10dp"
                  android:text="服务态度："/>
        <LinearLayout android:id="@+id/fuwu"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical"
                      android:orientation="horizontal"
                      android:padding="10dp"/>
        <TextView android:id="@+id/fuwufen"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="10dp"
                  android:text="5.0分"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="10dp"
          android:background="@color/lightgray"/>
</LinearLayout>
